---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import Layout from "./Layout.astro";

type Props = CollectionEntry<"thoughts">["data"];

const { title, description, publishedAt } = Astro.props;
---

<Layout currentPage="/thoughts">
  <div>
    <div class="flex justify-between gap-4 mb-2">
      <div class="col-span-2">
        <h2 class="text-primary text-2xl font-medium mb-2">{title}</h2>
      </div>
      <p class="mt-2 text-right whitespace-nowrap">
        <FormattedDate date={publishedAt} />
      </p>
    </div>
    <p class="text-secondary">{description}</p>
  </div>
  <slot />
</Layout>
